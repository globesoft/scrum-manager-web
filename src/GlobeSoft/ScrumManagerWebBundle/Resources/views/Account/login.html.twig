{% extends '::base.html.twig' %}

{% block body %}
<div class="container emphasis">
    <div class="row span11">
        <h2>Sign in form</h2>
    </div>

    {% if error %}
        <div class="row span11">{{ error.message }}</div>
    {% endif %}

    <div class="row span11">
        <form action="{{ path('login_check') }}" method="post">
            <label for="username">Username:</label>
            <input class="input span4" type="text" id="username" name="_username" value="{{ last_username }}" />

            <label for="password">Password:</label>
            <input class="input span4" type="password" id="password" name="_password" />

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <br />

            <input class="input span4 btn btn-primary btn-large" type="submit" value="Sign in" />
        </form>
    </div>
</div>
{% endblock %}